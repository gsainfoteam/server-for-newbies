{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@lib/drizzle": [
        "libs/drizzle/src"
      ],
      "@lib/drizzle/*": [
        "libs/drizzle/src/*"
      ],
      "@lib/infoteam-idp": [
        "libs/infoteam-idp/src"
      ],
      "@lib/infoteam-idp/*": [
        "libs/infoteam-idp/src/*"
      ]
    }
  }
}